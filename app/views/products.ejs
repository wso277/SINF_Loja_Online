<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <% include partials/head %>
    <link rel="stylesheet" type="text/css" href="/css/search.css">
</head>
<body ng-app="products-app">
<% include partials/messages %>
<% include partials/header.ejs %>
<div class="filters" style="float:left; padding-left:5em;display:inline">
    <h2 style="color:#006600"> Filtrar por: </h2>
    <form class="form-horizontal" name="filterForm">
        Marca: <input class="form-control" type="text" ng-model="formData.marca"/>
        <br/>
        Sistema Operativo: <input class="form-control" type="text" ng-model="formData.so"/>
        <br/>
        Limite mínimo de preço: <input class="form-control" type="range" value="200" min="1" max="1000" step="1" ng-model="formData.limPrecoMin"/>
        <br/>
        {{formData.limPrecoMin}}
        <br/>
        Limite máximo de preço: <input class="form-control" type="range" value="250" min="1" max="1000" step="1" ng-model="formData.limPrecoMax"/>
        <br/>
        {{formData.limPrecoMax}}
        <br/>
        Tamanho mínimo do ecrã: <input class="form-control" type="range" value="3" min="3" max="6" step="0.1" ng-model="formData.limEcraMin"/>
        <br/>
        {{formData.limEcraMin}}
        <br/>
        Tamanho máximo do ecrã: <input class="form-control" type="range" value="3" min="3" max="6" step="0.1" ng-model="formData.limEcraMax"/>
        <br/>
        {{formData.limEcraMax}}

        <button style="margin: 0" class="btn btn-sky btn-md text-uppercase"
                type="submit"
                ng-click="filter()">
            Filtrar
        </button>
    </form>
</div>
<div class="container">
    <section>
        <div class="container vertical-offset-100">
            <div class="board">
                <div ng-controller="ProductsController as productctrl" class="board-inner">

                    <hgroup class="mb20">
                        <h1 style="color: white">Produtos disponíveis</h1>
                    </hgroup>

                    <section id="section" class="col-xs-12 col-sm-6 col-md-12">
                        <% products.forEach(function(product) { %>
                        <article class="search-result row" style="background-color: #222222">
                            <div class="col-xs-12 col-sm-12 col-md-3">
                                <a href="/product/<%= product.CodigoArtigo %>" class="thumbnail"><img
                                            src="http://lorempixel.com/400/200/" alt="Lorem ipsum"/></a>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-2">
                                <ul class="meta-search">
                                    <li><i class="fa fa-android"></i>
                                        <span><%= product.NomeSistemaOperativo %></span>
                                    </li>
                                    <li><i class="fa fa-mobile"></i>
                                        <span><%= product.TamanhoEcra %> polegadas</span>
                                    </li>
                                    <li><i class="fa fa-mobile"></i>
                                        <span><%= product.StockAtual %> em stock</span>
                                    </li>
                                    <% if (product.Desconto > 0) { %>
                                    <li id="preco-antigo"><i class="fa fa-euro"></i>
                                        <span><%= (product.PVP).toFixed(2) %></span>
                                    </li>
                                    <% } %>
                                    <li id="preco"><i class="fa fa-euro"></i>
                                        <span><%= (product.PVP * (1 - (product.Desconto / 100))).toFixed(2) %></span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-7 excerpet">
                                <h3><a href="/product/<%= product.CodigoArtigo %>" title=""><%= product.Nome %></a></h3>

                                <p>Processador: <%= product.CPU %></p>

                                <p>Armazenamento: <%= product.Armazenamento %> GB</p>

                                <p>Data de Lançamento: <%= product.Lancamento %></p>
                            </div>
                            <span class="clearfix borda"></span>
                        </article>
                        <% }); %>

                    </section>
                    <button id="add" class="btn btn-fresh btn-lg text-uppercase" ng-click="getPage()">carregar mais
                        produtos
                    </button>
                </div>
            </div>
        </div>
    </section>
</div>
<% include partials/scripts %>
<script type="text/javascript" src="/js/app-products.js"></script>
</body>
</html>